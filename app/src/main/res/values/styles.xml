<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="Toolbar">
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/toolbar_text</item>
        <item name="pix_font">@string/font.montserrat.light</item>
    </style>

</resources>
